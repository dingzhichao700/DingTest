<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="42*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="未连接" HorizontalAlignment="Left" Margin="88,16,0,0" VerticalAlignment="Top" Grid.Column="1" Height="27" Width="110"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="180" Margin="41,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="421" Grid.ColumnSpan="2"/>
        <TextBox x:Name="message" HorizontalAlignment="Left" Height="23" Margin="41,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" Grid.ColumnSpan="2"/>
        <Button Content="发送" Grid.Column="1" HorizontalAlignment="Left" Margin="183,264,0,0" VerticalAlignment="Top" Width="75" Click="send_Click"/>
        <Button Content="建立连接" HorizontalAlignment="Left" Margin="41,18,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="button_Click"/>

    </Grid>
</Window>
